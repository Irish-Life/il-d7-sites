function search_results_block_view($delta = '') {
  switch($delta) {
    case 'search_results':
    $block['subject'] = t('');
    if (user_access('access content')) {
      // Use our custom function to retrieve data
      $result = search_results_contents();
      // No content in the last week
      $block['content'] = $result;
    }
    return $block;
  }
 }