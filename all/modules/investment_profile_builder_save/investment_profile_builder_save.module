		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-3';
    }
    else  if($score == '4'){      
		$investorTypePage = 'investments/investor-type-test/investors/balanced-investor';
		$mapFundPage= variable_get('investment_profile_builder_save_result_maps_url_4');
		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-4';
    }
    else  if($score == '5'){     
		$investorTypePage = 'investments/investor-type-test/investors/experienced-investor'; 
		$mapFundPage= variable_get('investment_profile_builder_save_result_maps_url_5');
		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-5';
    }
    else  if($score == '6'){    
		$investorTypePage = 'investments/investor-type-test/investors/adventurous-investor';  
		$mapFundPage= variable_get('investment_profile_builder_save_result_maps_url_6');
		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-6';
    }
    
    else  if($score == '7'){      
		$investorTypePage = 'investments/investor-type-test/investors/very-adventurous-investor';
		$mapFundPage = variable_get('investment_profile_builder_save_result_maps_url_6');
		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-6';
    }
	
		$investorTypePagePath = drupal_get_normal_path($investorTypePage);
		$mapFundPagePath = drupal_get_normal_path($mapFundPage);
		$rangeReturnsPagePath = drupal_get_normal_path($rangeReturnsPage);
