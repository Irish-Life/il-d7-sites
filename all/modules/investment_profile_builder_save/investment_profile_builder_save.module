*/
function getNodes($score)
{
	$investorTypePage;
	$investorTypePagePath;
	$mapFundPage;
	$mapFundPagePath;
	$rangeReturnsPage;
	$rangeReturnsPagePath;
	
if($score == '1'){      
    
		$investorTypePage = 'investments/investor-type-test/investors/safety-first-investor';
		$mapFundPage= 'investments/investor-type-test/funds/investing-not-for-you';
    }
    if($score == '2'){      
		$investorTypePage = 'investments/investor-type-test/investors/careful-investor';
		$mapFundPage= variable_get('investment_profile_builder_save_result_maps_url_2');
		$rangeReturnsPage = 'investments/investor-type-test/range/multi-asset-portfolio-fund-2';
    }
    else  if($score == '3'){      
		$investorTypePage = 'investments/investor-type-test/investors/conservative-investor';
